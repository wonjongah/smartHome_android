<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="271dp"
        android:layout_height="357dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toTopOf="@+id/edt_photo_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/edt_photo_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="등록할 이름을 입력해주세요."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_photo_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/iv_result"
        android:backgroundTint="#79ABFF"
        android:textCursorDrawable="@drawable/cursor"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="등록 이름  :  "
        app:layout_constraintBottom_toTopOf="@+id/btn_photo_cancel"
        app:layout_constraintEnd_toStartOf="@+id/edt_photo_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result" />

    <Button
        android:id="@+id/btn_photo_select"

        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/buttonshape"
        android:text="등 록"
        android:textColor="#666666"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_photo_cancel"
        app:layout_constraintTop_toBottomOf="@+id/edt_photo_select" />

    <Button
        android:id="@+id/btn_photo_cancel"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/buttonshape"
        android:textColor="#666666"
        android:textSize="18sp"
        app:backgroundTint="@null"
        android:text="취 소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_photo_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_photo_select" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="얼굴 인식 등록"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/iv_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71000004" />
</androidx.constraintlayout.widget.ConstraintLayout>